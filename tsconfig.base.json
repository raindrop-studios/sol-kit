{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@raindrop-studios/sol-kit": [
        "sol-kit/*/src/index.ts"
      ]
    },
  },
  "references": [
    {
      "path": "sol-kit"
    },
    {
      "path": "frameworks/react"
    }
  ]
}
